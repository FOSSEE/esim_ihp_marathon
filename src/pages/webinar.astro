---
import Layout from "../layouts/layout.astro";
---

<Layout>


    <!-- Header Section -->
    <!-- <div class="bg-white-50 min-h-screen"> -->
        <!-- Main Content -->
        <div id="webinar" class="container mx-auto px-6 py-16">
        <!-- Webinar Section -->
          <div class="text-center mt-2  fade-in">
                <h2 class="text-3xl font-bold text-indigo-600 mb-4"> Webinar</h2>
                <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto rounded-full"></div>
                                

            </div>
            <br >
            <br >
            <div class="text-center fade-in">
                                    <h4 class="text-3xl font-bold text-indigo-500 mb-4"> eSim Marathon</h4>
                                    <h5 class="text-3xl font-bold text-indigo-500 mb-4"> Circuit Design & Simulation with IHP SG13G2</h5>


                </div>
            </div>

            <!-- Main Webinar Card -->
            <div class="bg-white rounded-3xl shadow-2xl overflow-hidden mb-16 card-hover">
                <div class="bg-gradient-to-r from-cyan-500 to-blue-600 p-8 text-white">
                    <h3 class="text-2xl font-bold mb-4">Inaugural Webinar and Handholding Session</h3>
                    <div class="flex flex-wrap justify-center gap-8 text-lg">
                        <div class="flex items-center">
                            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                            </svg>
                            <span><strong>Time:</strong> 11:30 AM</span>
                        </div>
                        <div class="flex items-center">
                            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                            </svg>
                            <span><strong>Date:</strong> 23 September 2025</span>
                        </div>
                    </div>
                </div>

                <!-- Video Section -->
                <div class="p-8">
                    <div class="relative rounded-2xl overflow-hidden shadow-lg">
                        <iframe
                            class="w-full h-96 md:h-[500px]"
                            src="https://www.youtube.com/embed/4yrfS7f4Ubs"
                            title="Webinar on eSim Marathon 2025"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                            referrerpolicy="strict-origin-when-cross-origin"
                            allowfullscreen>
                        </iframe>
                    </div>
                </div>
            </div>

            <!-- Upcoming Webinars Section -->
            <div class="text-center mb-12">
                <h3 class="text-3xl font-bold text-indigo-600 mb-4">Upcoming Webinar Schedule</h3>
                <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto rounded-full"></div>
<br >
                <p class="text-gray-600 text-lg">Mark your calendars for these important sessions</p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <!-- Literature Survey -->
                <div class="bg-white rounded-2xl p-6 shadow-lg card-hover border-l-4 border-green-500">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <h4 class="text-xl font-bold text-indigo-600 mb-2">Literature Survey</h4>
                        <div class="text-2xl font-bold text-indigo-600 mb-2">26th</div>
                        <div class="text-indigo-600">September</div>
                    </div>
                </div>

                <!-- Implementation Session 1 -->
                <div class="bg-white rounded-2xl p-6 shadow-lg card-hover border-l-4 border-blue-500">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <h4 class="text-xl font-bold text-indigo-600 mb-2">Implementation</h4>
                        <div class="text-2xl font-bold text-indigo-600 mb-2">1st</div>
                        <div class="text-indigo-600">October</div>
                    </div>
                </div>

                <!-- Implementation Session 2 -->
                <div class="bg-white rounded-2xl p-6 shadow-lg card-hover border-l-4 border-purple-500">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <h4 class="text-xl font-bold text-indigo-600 mb-2">Implementation</h4>
                        <div class="text-2xl font-bold text-indigo-600 mb-2">8th</div>
                        <div class="text-indigo-600">October</div>
                    </div>
                </div>

                <!-- Final Submission -->
                <div class="bg-white rounded-2xl p-6 shadow-lg card-hover border-l-4 border-red-500">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4 pulse-animation">
                            <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13a1 1 0 102 0V9.414l1.293 1.293a1 1 0 001.414-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <h4 class="text-xl font-bold text-indigo-600 mb-2">Final Submission</h4>
                        <div class="text-2xl font-bold text-indigo-600 mb-2">14th</div>
                        <div class="text-indigo-600">October</div>
                    </div>
                </div>
            </div>

           </section>
    </div>
</html>
</Layout>
